{% extends 'layout.njk' %}
{% block head_defalut %}
{% endblock %}
{% block head %}
<link rel='stylesheet' href='/css/index.css'>
{% endblock %}
{% block content %}
{% include "./common/header-index.njk" %}
<div class="video-wrapper">
  <div class="form-wrapper">
    <div class="content-banner adult" style="z-index:101;">
      <div class="form-box">
        <form class="form-content">
          <p>立即领取免费体验课</p>
          <div class="name">
            <input class="with-icon fl" id="adult-name" type="text" name="" value="" placeholder="姓名">
            <div class="form-pic fl">
              <img src="/images/adult-course/user_icon.png" alt="">
            </div>
          </div>
          <div class="age">
            <input class="with-icon fl" id="adult-age" type="text" name="" value="" placeholder="年龄">
            <div class="form-pic pic-age fl">
              <img src="/images/adult-course/user_icon.png" alt="">
            </div>
          </div>
          <ul id="accordion" class="accordion">
            <li>
              <div class="link">
                <span>选择校区</span>
              </div>
              <ul class="submenu">
                <li>
                  <div class="link">
                    <p>The ONE国际钢琴艺术（北京校区）</p>
                  </div>
                  <ul class="submenu">
                    <li>
                      <a class="campus-item" value="1">月恒直营校区</a>
                    </li>
                    <li>
                      <a class="campus-item" value="4">测试校区1</a>
                    </li>
                  </ul>
                </li>
                <li>
                  <div class="link">
                    <p>The ONE国际钢琴艺术（上海校区）</p>
                  </div>
                  <ul class="submenu">
                    <li>
                      <a class="campus-item" value="2">黄埔</a>
                    </li>
                    <li>
                      <a class="campus-item" value="3">浦东</a>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
          <input id="adult-mobile" type="text" name="" value="" placeholder="请输入手机号">
          <div class="captcha">
            <input class="with-captcha" id="adult-captcha" width="100px" type="text" name="" value="" placeholder="请输入验证码">
            <button id="get-captcha" type="button" onclick="getCode(this)">获取验证码</button>
            <button id="reset-captcha" style="display:none;"><span id="time-captcha">60</span>秒后重发</button>
          </div>
          <button id="submit" type="button">点击领取</button>
        </form>
      </div>
    </div>
  </div>
  <div class="video-box">
    <video src="http://static.1tai.com/theone/index-about-v3.mp4?v=2" autoplay="" loop="" muted="" poster="" id="video"></video>
    <div class="mask">
      <div class="mask-content">
        <h1>The ONE国际音乐艺术</h1>
        <p>让孩子成为爱音乐，会弹琴，能考级的小小音乐家</p>
      </div>
    </div>
  </div>
</div>
{% include "./common/video-box.njk" %}
<div class="g-wrap world-map">
  <div class="content-box">
    <div class="box-title white">
      <h1>The ONE专注于3-12岁音乐教育</h1>
    </div>
    <div class="map-pic">
      <img src="/images/index/world_map.png" alt="world_map">
    </div>
    <div class="world-data">
      <div class="left fl">
        <div id="num1" class="fl"></div>
        <span class="fl">个</span>
        <br>
        <p>国家和地区</p>
      </div>
      <div class="middle fl">
        <div id="num2" class="fl"></div>
        <span class="fl">+</span>
        <br>
        <p>用户遍布全球</p>
      </div>
      <div class="right fl">
        <div id="num3" class="fl"></div>
        <span class="fl">%</span>
        <br>
        <p>专业音乐教师</p>
      </div>
    </div>
  </div>
</div>
<div class="g-wrap reason">
  <div class="content-box">
    <div class="box-title">
      <h1>为什么要来The ONE学钢琴</h1>
    </div>
    <div class="box-item full">
      <div class="item fl">
        <img src="/images/index/reason.jpg" alt="">
        <div class="reason-mask">
          <div class="bg">
            <h3>自信优雅演奏表演</h3>
            <p>让每个孩子都能大胆展示自信表演国际接轨的教学帮孩子无缝衔接出国学习</p>
          </div>
        </div>
      </div>
      <div class="item fl">
        <img src="/images/index/reason.jpg" alt="">
        <div class="reason-mask">
          <div class="bg">
            <h3>音乐素养全面提升</h3>
            <p>让孩子在兴趣中精通唱、听、视、奏培养孩子成为高音乐素养的幸福的人</p>
          </div>
        </div>
      </div>
      <div class="item fl">
        <img src="/images/index/reason.jpg" alt="">
        <div class="reason-mask">
          <div class="bg">
            <h3>央音国音知识系统</h3>
            <p>中央、中国音乐学院教研团队编排最专业的阶梯式知识系统</p>
          </div>
        </div>
      </div>
      <div class="item fl">
        <img src="/images/index/reason.jpg" alt="">
        <div class="reason-mask">
          <div class="bg">
            <h3>教材体系专业科学</h3>
            <p>让孩子在兴趣中精通唱、听、视、奏培养孩子成为高音乐素养的幸福的人</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="g-wrap course-video">
  <div class="content-box">
    <div class="box-title">
      <h1>每个孩子都学得会的钢琴课</h1>
    </div>
    <div class="box-item">
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
    </div>
    <div class="box-item bottom">
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
      <div class="video-item fl">
        <a href="">
          <img src="/images/index/course_video.jpg" alt="">
        </a>
        <p>孩子和郎朗一琴合奏视频</p>
      </div>
    </div>
  </div>
</div>
<div class="g-wrap honor">
  <div class="content-box">
    <div class="box-title white">
      <h1>荣誉奖项</h1>
    </div>
    <div class="content-box swiper-index">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="slide-item fl">
              <img src="/images/index/edison_awards.png" alt="">
              <p>爱迪生发明奖</p>
              <p>Edison Awards</p>
            </div>
            <div class="slide-item fl">
              <img src="/images/index/ces.png" alt="">
              <p>全球消费电子展CES</p>
              <p>“创新大奖”</p>
            </div>
            <div class="slide-item fl">
              <img src="/images/index/namm.png" alt="">
              <p>美国乐器学会 NAMM show</p>
              <p>优秀教育产品奖</p>
            </div>
            <div class="slide-item fl">
              <img src="/images/index/nappa.png" alt="">
              <p>全美亲子协会 NAPPA</p>
              <p>年度产品大奖</p>
            </div>
          </div>
        </div>
        <!-- 如果需要分页器 -->
        <div class="swiper-pagination"></div>

        <!-- 如果需要导航按钮 -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>
  </div>
</div>
{% include "./common/star-says.njk" %}
<div class="fixed-bar" style="display:none;z-index:999;">
  <div class="g-wrap">
    <div class="left-bar fl">
      <p>免费领取价值<span>388元</span>的体验课</p>
    </div>
    <div class="right-bar fr">
      <button class="fl back-to-top" type="">点击领取</button>
      <img class="fl back-to-top" src="/images/fixed_bar_click.png" alt="">
    </div>
  </div>
</div>
{% endblock %}
